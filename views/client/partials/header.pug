include ../mixins/sub-menu.pug
header.header
    .container 
        .row.align-item-center 
            .col-3 
                .inner-logo 
                    a(href = "/")
                        img(src= "/images/logo.svg", alt= "Logo" width="100px")
            .col-5 
                form(
                    action="/search"
                    method="GET"
                ) 
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            class="form-control"
                            placeholder="Nhập từ khóa..."
                            name="keyword"
                            value= (keyword ? keyword : "")
                        )
                        button(type="submit" class="btn btn-primary") Tìm
            .col-4 
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const path = "/products"
                            a(href=path) Sản phẩm
                            +sub-menu(categories,path)
                        li
                            a(href="/cart") Giỏ hàng (#{cart.totalProducts ? cart.totalProducts: 0})
                        if (user)
                            li 
                                a(href="/user/logout") Đăng xuất
                            li Hi #{user.fullName} 
                        else 
                            li 
                                a(href="/user/register") Đăng ký
                            li 
                                a(href="/user/login") Đăng nhập
