extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đăng ký tài khoản
                form(
                    action="/user/register", 
                    method="post"
                ) 
                    div(class="mb-3")
                        label(for="fullName" class="form-label") Họ tên:
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required 
                        )
                    div(class="mb-3")
                        label(for="email" class="form-label") Email:
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required 
                        )
                    div(class="mb-3")
                        label(for="password" class="form-label") Mật khẩu:
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required 
                        )
                    div(class="mb-3")
                        button(
                            type="submit"
                            class="btn btn-primary w-100"
                        ) Đăng ký
                    
